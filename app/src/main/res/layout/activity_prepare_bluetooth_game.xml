<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:background="@color/mainBackgroundColor"
                                                 tools:context=".views.PrepareBluetoothGameView">

        <Button
                android:id="@+id/button_createGame"
                android:paddingLeft="25dp"
                android:paddingRight="35dp"
                android:drawableStart="@drawable/icon_create"
                android:background="@drawable/button_selector_positive"
                android:text="@string/button_createGame"
                style="@style/PrimaryColoredButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:fontFamily="@font/londrinasolid_regular"
                android:layout_marginEnd="35dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="35dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="30dp"/>

        <Button
                android:id="@+id/button_joinGame"
                android:paddingLeft="25dp"
                android:paddingRight="35dp"
                android:drawableStart="@drawable/icon_join"
                android:background="@drawable/button_selector_positive"
                android:text="@string/button_joinGame"
                style="@style/PrimaryColoredButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:fontFamily="@font/londrinasolid_regular"
                android:layout_marginEnd="35dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/button_createGame" android:layout_marginBottom="15dp"/>

        <ListView
                android:layout_width="0dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/londrinasolid_regular"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_height="327dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:id="@+id/listView_devices"
                app:layout_constraintBottom_toTopOf="@+id/button_joinGame" android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="@string/textView_oponents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_opponents" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/londrinasolid_regular" android:textSize="22sp"
                android:textColor="@android:color/white" android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toTopOf="@+id/listView_devices" app:layout_constraintHorizontal_bias="0.501"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        <ImageView
                android:src="@drawable/ic_auto"
                android:layout_width="33dp"
                android:layout_height="28dp"
                android:id="@+id/button_updateSearch"
                app:layout_constraintBottom_toBottomOf="@+id/textView_opponents"
                app:layout_constraintEnd_toEndOf="@+id/listView_devices"/>
        <TextView
                android:text="@string/textView_joinCreateInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_status"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/button_joinGame"
                android:fontFamily="@font/londrinasolid_regular" android:textSize="22sp"
                android:textColor="@android:color/white" android:textAlignment="center" android:typeface="monospace"
                android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_back"
                android:id="@+id/button_back"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" android:layout_marginStart="16dp" tools:ignore="VectorDrawableCompat"/>

    </android.support.constraint.ConstraintLayout>

</layout>