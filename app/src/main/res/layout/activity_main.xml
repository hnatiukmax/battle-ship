<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">


<android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBackgroundColor"
        tools:context=".activities.MainActivity">

    <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--app:srcCompat="@drawable/main_back"-->
            <!--android:scaleType="fitXY"-->
            <!--android:id="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"-->
            <!--app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"-->
            <!--app:layout_constraintBottom_toBottomOf="parent"/>-->

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/main_logo"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:id="@+id/button_single"
            android:paddingLeft="25dp"
            android:paddingRight="35dp"
            android:drawableStart="@drawable/ic_android"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="35dp"
            android:background="@drawable/button_selector_positive"
            android:text="@string/button_single"
            style="@style/PrimaryColoredButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:fontFamily="@font/londrinasolid_regular"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>

    <Button
            android:id="@+id/button_two_players"
            android:paddingLeft="25dp"
            android:paddingRight="35dp"
            android:drawableStart="@drawable/ic_person"
            android:background="@drawable/button_selector_positive"
            style="@style/PrimaryColoredButton"
            android:layout_width="0dp"
            android:text="@string/button_two_players"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="35dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/button_single"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:fontFamily="@font/londrinasolid_regular"/>


    <Button
            android:id="@+id/button_play_bluetooth"
            android:paddingLeft="25dp"
            android:paddingRight="35dp"
            android:drawableStart="@drawable/ic_bluetooth"
            android:background="@drawable/button_selector_positive"
            style="@style/PrimaryColoredButton"
            android:layout_width="0dp"
            android:text="@string/button_play_bluetooth"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="35dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:fontFamily="@font/londrinasolid_regular" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/button_two_players"/>

    <Button
            android:id="@+id/button_play_network"
            android:paddingLeft="25dp"
            android:paddingRight="35dp"
            android:drawableStart="@drawable/ic_wifi"
            android:background="@drawable/button_selector_positive"
            style="@style/PrimaryColoredButton"
            android:layout_width="0dp"
            android:text="@string/button_play_network"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="35dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:fontFamily="@font/londrinasolid_regular" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/button_play_bluetooth"/>


    <Button
            android:id="@+id/button_exit"
            android:background="@drawable/button_selector_negative"
            style="@style/PrimaryColoredButton"
            android:layout_width="0dp"
            android:text="@string/button_exit"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="35dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:fontFamily="@font/londrinasolid_regular" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>

</layout>