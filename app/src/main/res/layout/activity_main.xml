<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBackgroundColor"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/main_logo"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="168dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:id="@+id/button_single"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="35dp"
            android:background="@drawable/button_selector"
            android:text="@string/button_single"
            style="@style/PrimaryColoredButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:fontFamily="@font/londrinasolid_regular"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>

    <Button
            android:id="@+id/button_two_players"
            android:background="@drawable/button_selector"
            style="@style/PrimaryColoredButton"
            android:layout_width="0dp"
            android:text="@string/two_players_button"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="35dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/button_single"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:fontFamily="@font/londrinasolid_regular"/>

    <Button
            android:id="@+id/exit"
            android:background="@drawable/button_selector"
            style="@style/PrimaryColoredButton"
            android:layout_width="0dp"
            android:text="@string/two_players_button"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="35dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/button_single"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:fontFamily="@font/londrinasolid_regular"/>

</android.support.constraint.ConstraintLayout>