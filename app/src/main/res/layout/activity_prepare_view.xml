<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mainBackgroundColor"
            tools:context=".views.PrepareView">

        <com.masterschief.battleships.uigame.GameDesk
                android:layout_width="320dp"
                android:layout_height="320dp"

                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginBottom="50dp" app:layout_constraintBottom_toTopOf="@+id/button_auto"
                android:id="@+id/gameDesk"/>

        <Button
                android:id="@+id/button_auto"
                android:paddingLeft="25dp"
                android:paddingRight="35dp"
                android:drawableStart="@drawable/ic_auto"
                android:background="@drawable/button_selector_positive"
                android:text="@string/button_auto"
                style="@style/PrimaryColoredButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:fontFamily="@font/londrinasolid_regular"
                android:layout_marginEnd="35dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="35dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/button_next"
                android:layout_marginBottom="25dp"/>

        <Button
                android:id="@+id/button_next"
                android:paddingLeft="25dp"
                android:paddingRight="35dp"
                android:drawableStart="@drawable/ic_next"
                android:background="@drawable/button_selector_positive"
                android:text="@string/button_next"
                style="@style/PrimaryColoredButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:fontFamily="@font/londrinasolid_regular"
                android:layout_marginEnd="35dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="50dp"/>

        <TextView
                android:layout_width="0dp"
                android:text="@string/textView_prepareUp"
                android:layout_height="wrap_content"
                android:id="@+id/textView_prepareUp"
                android:textColor="@android:color/white" android:textAlignment="center"
                android:fontFamily="@font/londrinasolid_regular" android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toTopOf="@+id/textView_prepareDown" android:layout_marginBottom="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:text="@string/textView_prepareDown"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/textView_prepareDown" android:textSize="14sp" android:textColor="@android:color/white"
                android:textAlignment="center" android:textAllCaps="true"
                android:fontFamily="@font/londrinasolid_regular" app:layout_constraintHorizontal_bias="0.512"
                android:layout_marginBottom="20dp" app:layout_constraintBottom_toTopOf="@+id/gameDesk"/>
    </android.support.constraint.ConstraintLayout>

</layout>