<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:background="@color/mainBackgroundColor"
                                                 tools:context=".presentation.pages.selectenemy.SelectEnemyActivity">

        <Button
                android:id="@+id/button_createGame"
                android:paddingLeft="25dp"
                android:paddingRight="35dp"
                android:drawableStart="@drawable/icon_create"
                android:background="@drawable/button_selector_positive"
                android:text="@string/button_createGame"
                style="@style/PrimaryColoredButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:fontFamily="@font/londrinasolid_regular"
                android:layout_marginEnd="60dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="60dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="15dp"/>

        <Button
                android:id="@+id/button_joinGame"
                android:paddingLeft="25dp"
                android:paddingRight="35dp"
                android:drawableStart="@drawable/icon_join"
                android:background="@drawable/button_selector_positive"
                android:text="@string/button_joinGame"
                style="@style/PrimaryColoredButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:fontFamily="@font/londrinasolid_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/button_createGame"
                android:layout_marginStart="60dp" android:layout_marginEnd="60dp"/>

        <ListView
                android:layout_width="0dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/londrinasolid_regular"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_height="0dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="70dp" android:layout_marginEnd="70dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toTopOf="@+id/button_joinGame" android:id="@+id/devices"
                android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/textView_opponents"
                android:layout_marginBottom="25dp"/>
        <TextView
                android:text="@string/textView_opponents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_opponents" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/londrinasolid_regular" android:textSize="22sp"
                android:textColor="@android:color/white"
                app:layout_constraintHorizontal_bias="0.501"
                android:layout_marginTop="10dp" app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
                android:src="@drawable/ic_auto"
                android:layout_width="33dp"
                android:layout_height="28dp"
                android:id="@+id/btn_updateSearch"
                app:layout_constraintBottom_toBottomOf="@+id/textView_opponents"
                app:layout_constraintEnd_toEndOf="@+id/devices"/>

        <TextView
                android:text="@string/textView_joinCreateInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/faq"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toTopOf="@+id/button_joinGame"
                android:fontFamily="@font/londrinasolid_regular" android:textSize="22sp"
                android:textColor="@android:color/white" android:textAlignment="center" android:typeface="monospace"/>

    </android.support.constraint.ConstraintLayout>

</layout>