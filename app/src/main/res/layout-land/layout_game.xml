<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/layout">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mainBackgroundColor">

        <com.masterschief.battleships.presentation.game.GameBattleDesk
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/enemiesDesk"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                android:layout_marginTop="10dp"
                app:layout_constraintDimensionRatio="1:1" app:layout_constraintStart_toEndOf="@+id/arrow"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"/>

        <com.masterschief.battleships.presentation.game.GameBattleDesk
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/ownDesk"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="10dp"
                app:layout_constraintDimensionRatio="1:1" app:layout_constraintEnd_toStartOf="@+id/arrow"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="You"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                app:layout_constraintTop_toTopOf="parent" android:fontFamily="@font/londrinasolid_regular"
                android:textColor="@android:color/white" android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent" android:textSize="16sp" android:layout_marginTop="12dp"/>
        <TextView
                android:text="Android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
                android:fontFamily="@font/londrinasolid_regular" android:textColor="@android:color/white"
                android:textSize="16sp"/>
        <TextView
                android:text="Ships : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9" android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/textView11"
                android:layout_marginEnd="8dp" android:textSize="16sp" android:textColor="@android:color/white"
                android:fontFamily="@font/londrinasolid_regular"/>
        <TextView
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10" android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent" android:fontFamily="@font/londrinasolid_regular"
                android:textSize="16sp" android:textColor="@android:color/white"
                app:layout_constraintStart_toEndOf="@+id/textView12" android:layout_marginStart="8dp"/>
        <TextView
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11" android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="@+id/ownDesk"
                android:textSize="16sp" android:textColor="@android:color/white"
                android:fontFamily="@font/londrinasolid_regular"/>
        <TextView
                android:text="Ships : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@+id/enemiesDesk"
                android:fontFamily="@font/londrinasolid_regular" android:textSize="16sp"
                android:textColor="@android:color/white"/>
        <ImageView
                android:layout_width="30dp"
                android:layout_height="33dp" app:srcCompat="@drawable/messages"
                android:id="@+id/chat" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp" app:srcCompat="@drawable/arrow_right"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/arrow"/>


    </android.support.constraint.ConstraintLayout>

</layout>