<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mainBackgroundColor">

        <ImageView
                android:id="@+id/logo"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/main_logo" />

        <Button
                android:id="@+id/single"
                style="@style/AppTheme.PrimaryColoredButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_selector_positive"
                android:drawableStart="@drawable/ic_android"
                android:text="@string/main_page_button_single"
                android:textAlignment="center"
                app:layout_constraintEnd_toStartOf="@+id/twoPlayers"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logo" />

        <Button
                android:id="@+id/twoPlayers"
                style="@style/AppTheme.PrimaryColoredButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/button_selector_positive"
                android:drawableStart="@drawable/ic_person"
                android:text="@string/main_page_button_two_players"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/single"
                app:layout_constraintTop_toBottomOf="@+id/logo" />


        <Button
                android:id="@+id/bluetoothMode"
                style="@style/AppTheme.PrimaryColoredButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_selector_positive"
                android:drawableStart="@drawable/ic_bluetooth"
                android:text="@string/main_page_button_play_bluetooth"
                android:textAlignment="center"
                app:layout_constraintEnd_toStartOf="@+id/networkMode"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/single" />

        <Button
                android:id="@+id/networkMode"
                style="@style/AppTheme.PrimaryColoredButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/button_selector_positive"
                android:drawableStart="@drawable/ic_wifi"
                android:text="@string/main_page_button_play_network"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/bluetoothMode"
                app:layout_constraintTop_toBottomOf="@+id/twoPlayers" />


        <Button
                android:id="@+id/exit"
                style="@style/AppTheme.PrimaryColoredButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_selector_negative"
                android:minWidth="200dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="@string/main_page_button_exit"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>

</layout>