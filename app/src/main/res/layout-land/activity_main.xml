<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/mainBackgroundColor"
>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/main_logo"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toTopOf="parent"
    />

    <Button
            android:id="@+id/button_single"
            android:paddingLeft="25dp"
            android:paddingRight="35dp"
            android:drawableStart="@drawable/ic_android"
            android:background="@drawable/button_selector_positive"
            android:text="@string/button_single"
            style="@style/PrimaryColoredButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:fontFamily="@font/londrinasolid_regular"
            app:layout_constraintEnd_toStartOf="@+id/button_two_players"
            android:layout_marginEnd="20dp" android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>

    <Button
            android:id="@+id/button_two_players"
            android:paddingLeft="25dp"
            android:paddingRight="35dp"
            android:drawableStart="@drawable/ic_person"
            android:background="@drawable/button_selector_positive"
            style="@style/PrimaryColoredButton"
            android:layout_width="0dp"
            android:text="@string/button_two_players"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:fontFamily="@font/londrinasolid_regular"
            app:layout_constraintStart_toEndOf="@+id/button_single" android:layout_marginStart="20dp"
            android:layout_marginTop="35dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>


    <Button
            android:id="@+id/button_play_bluetooth"
            android:paddingLeft="25dp"
            android:paddingRight="35dp"
            android:drawableStart="@drawable/ic_bluetooth"
            android:background="@drawable/button_selector_positive"
            style="@style/PrimaryColoredButton"
            android:layout_width="0dp"
            android:text="@string/button_play_bluetooth"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:fontFamily="@font/londrinasolid_regular"
            app:layout_constraintEnd_toStartOf="@+id/button_play_network"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/button_single"

            />

    <Button
            android:id="@+id/button_play_network"
            android:paddingLeft="25dp"
            android:paddingRight="35dp"
            android:drawableStart="@drawable/ic_wifi"
            android:background="@drawable/button_selector_positive"
            style="@style/PrimaryColoredButton"
            android:layout_width="0dp"
            android:text="@string/button_play_network"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:fontFamily="@font/londrinasolid_regular"
            app:layout_constraintStart_toEndOf="@+id/button_play_bluetooth"
            android:layout_marginStart="20dp" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/button_two_players"/>


    <Button
            android:id="@+id/button_exit"
            android:background="@drawable/button_selector_negative"
            style="@style/PrimaryColoredButton"
            android:layout_width="wrap_content"
            android:text="@string/button_exit"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:fontFamily="@font/londrinasolid_regular"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
    />


</android.support.constraint.ConstraintLayout>